{
	"compilerOptions": {
		// âš¡ Module & Target
		"module": "CommonJS", // ğŸ“¦ use CommonJS modules (Node.js style)
		"target": "ESNext", // ğŸš€ compile to latest JS features
		"moduleResolution": "node", // ğŸ” resolve modules like Node.js

		// ğŸ›¡ï¸ Strict Type Checking
		"strict": true, // âœ… enable all strict type-checking options
		"noImplicitAny": true, // âŒ prevent variables from having 'any' type
		"strictNullChecks": true, // ğŸš« enforce explicit null/undefined checks
		"strictFunctionTypes": true, // ğŸ§© check function type compatibility
		"noImplicitThis": true, // âš ï¸ catch unsafe 'this' usage
		"noUnusedLocals": true, // ğŸ‘» warn about unused local variables
		"noUnusedParameters": true, // ğŸ“ warn about unused function parameters
		"noImplicitReturns": true, // ğŸ”„ ensure all code paths return something
		"skipLibCheck": true, // ğŸ“š skip checking type defs from libraries
		"noErrorTruncation": true, // ğŸ–¥ï¸ show full TypeScript errors

		// âœ¨ Interop & Decorators
		"esModuleInterop": true, // ğŸ”— allow default import from CommonJS modules
		"experimentalDecorators": true, // ğŸ·ï¸ enable decorator syntax
		"emitDecoratorMetadata": true, // ğŸ§¬ emit metadata for decorators

		// âš™ï¸ Constants & Internal
		"preserveConstEnums": true, // ğŸ”’ keep const enums in emitted code
		"stripInternal": true, // âœ‚ï¸ remove internal code marked with @internal

		// ğŸ“‚ Project Structure
		"outDir": "./build/src", // ğŸ—ï¸ output compiled JS here
		"rootDir": "src", // ğŸŒ± root of source TS files
		"baseUrl": ".", // ğŸ›¤ï¸ base path for module resolution
		"typeRoots": ["node_modules/@types", "src/types"] // ğŸ“¦ where TS looks for types
	},
	"exclude": ["node_modules"], // ğŸš« don't compile node_modules
	"include": ["src/**/*"] // ğŸ“ include all TS files in src folder
}
